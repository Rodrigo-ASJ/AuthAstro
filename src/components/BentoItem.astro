---
interface Props{
    class?: string;
    title: String;
    subtitle?: String;
}

const { title, subtitle } = Astro.props
---

<article 
class={`

    ${Astro.props.class}
    col-span-5
    relative rounded-xl
    backdrop-blur-md
    border border-black/10
    shadow-inner shadow-white/10
    group overflow-hidden
`}> 

<div class="absolute z-10 left-0 top-0  w-full h-full bg-gradient-to-b from-transparent from-40% via-[#151836]/50 to-[#151836]/80"></div>
 <slot name="image"></slot>

<div class="relative select-none flex flex-col gap-1 p-6 text-lg z-30 justify-end h-full">
    <h2 class="text-3xl font-semibold text-balance text-white mb-4">{title}</h2>
    { subtitle && <h3 class="text-2xl  text-balance text-sky-200/80 -mt-4 mb-6">{subtitle}</h3>}
 
    <slot name="content"></slot>

    
</div>


</article>