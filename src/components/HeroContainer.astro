---
interface Props { 
    img?: string;
}

const { img } = Astro.props
---
<div class="flex justify-center items-center flex-col bg-no-repeat bg-cover w-full relative h-[60dvh] max-w-[100dvw]" 
style={`
clip-path: polygon(0 0, 100% 0, 100% 85%, 50% 100%, 50% 100%, 0 85%);
background-image: url('${img}');
`}>    
   <slot/>
   
</div>