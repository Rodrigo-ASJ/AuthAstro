---
import Logo from "./Logo.astro"

//Traducci√≥n
import { getI18N } from '../i18n/'
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

---
<section class="text-xl text-left px-20 max-w-[60ch] mx-auto text-pretty my-24">
    
    <Logo class="w-16 mb-10 mx-auto" alt="ESLAND LOGO"/>
    <h1 
    class="text-5xl font-semibold text-wrap tracking-wide text-center mx-auto mb-16"
    >{i18n.INTRO_TITLE}<br /> {i18n.INTRO_TITLE_AFTER_BR}</h1>
    <p set:html={i18n.INTRO_DESCRIPTION_1}></p>
    <p set:html={i18n.INTRO_DESCRIPTION_2}></p>
    <p set:html={i18n.INTRO_DESCRIPTION_3}></p>
</section>