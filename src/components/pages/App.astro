---
import Layout from '../../layouts/Layout.astro';

//componentes
import Video from '../Video.astro';
import Intro from '../Intro.astro';
import Bento from '../Bento.astro';
import Prefooter from '../Prefooter.astro';

//Traducci√≥n
import { getI18N } from '../../i18n'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

---

<Layout 
title={i18n.SEO_TITLE}
description={i18n.SEO_DESCRIPTION}>
<link
		rel="preload"
		href="/fonts/tomaso.woff2"
		as="font"
		type="font/woff2"
		crossorigin
		slot="preload"
	/>
	<link
		rel="preload"
		href="/fonts/jura.woff2"
		as="font"
		type="font/woff2"
		crossorigin
		slot="preload"
	/>
	<Video/>
	<main>
		<Intro/>
		<Bento/>
		<Prefooter/>
	</main>

</Layout>
